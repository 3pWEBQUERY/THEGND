model UserPerk {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  perkId     String
  perk       Perk     @relation(fields: [perkId], references: [id], onDelete: Cascade)
  unlockedAt DateTime @default(now())
